html, body
    height 100%
    padding 0
    margin 0

.navbar
    margin-bottom 0

.navbar-inner.customized
    padding 0 2em 0 2em

.nav.messages
    margin-top 0.7em

.message-notice-wrapper
    margin-right 1em

#message-notice
    display none

.new-hast-box
    position absolute
    top 42px
    bottom 0
    overflow-y hidden

.deck-box
    height 100%
    padding-top 3em

.deck-container
    min-height 95%
    max-height 95%
    overflow-y auto

.editor-box
    height 93%
    background-color #DCDCDC

.editor-header
    text-align center

#editor
    height 100%

.deck-container.inFullScreen
    position  absolute
    bottom    0
    right     0
    left      0
    width     auto
    height    auto
    min-height 100%
    max-height 100%
    padding   0em 10em
    overflow-y auto
    z-index   2000
    background-color #FFFFFF

.editor-box.inFullScreen
    display none

.navbar.inFullScreen
    display none

.full-screen-btn-group
    position absolute
    bottom 2.5em
    left 3em
    margin auto
    font-size 1em

.fade-btn
    display none
    z-index 3000

.save-btn.no-display
    display none

.sync-deck-btn.no-display
    display none !important

.exit-full-screen-area
    position absolute
    left 0
    bottom 0
    width 25em
    height 15em
    z-index 2001

.exit-full-screen-area.inFullScreen
    display block

.exit-full-screen-area.inFullScreen .fade-btn
    display inline-block
    opacity 0.2

.exit-full-screen-area.inFullScreen .save-btn
    display none

.exit-full-screen-area.inFullScreen .full-screen-btn
    display none

.exit-full-screen-area.inFullScreen .sync-deck-btn
    display inline-block

.exit-full-screen-area.inFullScreen:hover .fade-btn
    display inline-block
    opacity 1

.archives-box
    min-width 500px
    max-width 900px
    margin-top 2em
    margin-left 4em
    margin-right 4em

.btn-block
    margin-top 1em

.page-404
    margin-top 5em
    text-align center
