html, body
    height 100%
    padding 0
    margin 0

.navbar
    margin-bottom 0

.navbar-inner.customized
    padding 0 2em 0 2em

.nav.messages
    margin-top 0.7em

.message-notice-wrapper
    margin-right 1em

#message-notice
    display none

.new-hast-box
    position absolute
    top 42px
    bottom 0
    overflow-y hidden

hr.deck-box-divider
    margin-top 0.7em
    margin-bottom 0.7em

.deck-box
    height 100%
    padding-top 3em

.deck-container
    min-height 90%
    max-height 90%
    overflow-y auto

.control-keys
    font-size 1.5em
    text-align center
    margin-bottom 1em

.editor-box
    height 93%
    background-color #DCDCDC

.editor-header
    text-align center

#editor
    height 100%

.keys-group
    display inline-block
    font-size 1em

.deck-container.inFullScreen
    position  absolute
    bottom    0
    right     0
    left      0
    width     auto
    height    auto
    min-height 100%
    max-height 100%
    padding   0em 10em
    overflow-y auto
    z-index   2000
    background-color #FFFFFF

.editor-box.inFullScreen
    display none

.navbar.inFullScreen
    display none

.control-keys.inFullScreen
    display none

.exit-full-screen-btn
    display none
    position absolute
    right 30%
    bottom 30%
    z-index 3000

.exit-full-screen-area
    display none
    position absolute
    right 0
    bottom 0
    width 25em
    height 15em
    z-index 2001

.exit-full-screen-area.inFullScreen
    display block

.exit-full-screen-area.inFullScreen .exit-full-screen-btn
    display block
    opacity 0.2

.exit-full-screen-area.inFullScreen:hover .exit-full-screen-btn
    display block
    opacity 1

.archives-box
    min-width 400px
    max-width 900px
    margin-top 2em
    margin-left 4em
    margin-right 4em
